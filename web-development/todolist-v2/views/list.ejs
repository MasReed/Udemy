
<%- include('header'); -%>

    <div id=heading class="box">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% newItems.forEach(function(item){ %>
            <div class="item">
                <input type="checkbox" name="" value="">
                <p><%= item.name %></p>
            </div>
        <% }); %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="E.g. wash the car" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>

    </div>

<%- include('footer'); -%>
